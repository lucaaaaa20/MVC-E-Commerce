@{
}

<container class="container d-flex justify-content-between">
    @foreach(var article in Model)
    {
        <div class="card" style="width: 18rem;">
            <div class="main-image-article" data-article-name="@article.Name">
                <img src="@article.LinkImg" class="card-img-top" alt="@article.Name">
                <div class="container-img-variant w-100">
                    @foreach(var variant in article.Variant)
                    {
                        <img src="@variant.LinkImg" class="img-variant" onmouseover="setVariantData(this)" onmouseout="resetVariantData(this)" alt="@article.Name @variant.Color.Name" data-article-img="@article.LinkImg" data-article-name="@variant.Name" data-article-discount-price="@variant.DiscountPrice" data-article-price="@variant.Price">
                    }
                </div>
            </div>
            <div class="card-body">
                <h5 class="article-name card-title">@article.Name</h5>
                @if (@article.Variant.Count() > 0)
                {
                    <p>@article.Variant.Count() varianti</p>
                }
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                @foreach (var variant in article.Variant)
                {
                    if(variant.Discount == true)
                    {
                        <span class="prezzo-articolo">@variant.Price</span>
                        <span class="prezzo-scontato">@variant.DiscountPrice</span>
                    }
                    else
                    {
                        <span class="prezzo-articolo">@variant.Price</span>
                        <span class="prezzo-scontato"></span>
                    }
                    break;
                }
                <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
        </div>
    }
</container>